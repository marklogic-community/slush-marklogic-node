  <search:extract-metadata>
    <search:qname elem-ns="http://marklogic.com/xdmp/json/basic" elem-name="latitude"/>
    <search:qname elem-ns="http://marklogic.com/xdmp/json/basic" elem-name="longitude"/>
    <search:qname elem-ns="http://marklogic.com/xdmp/json/basic" elem-name="name"/>
  </search:extract-metadata>

</search:options>
